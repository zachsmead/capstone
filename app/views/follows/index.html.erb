<% @users.each_slice(3) do |three_users| %>

	<div class="row row-center">

		<% three_users.each do |user|%>

			<div class="col-md-3 index-small-box">
					<%= user.email %>
					<% unless user.id == @current_user_id %>
						<%= form_tag "/follows", method: :post do %>
							<input type="hidden" name="followee_id" value="<%=user.id%>">
							<input type="submit" value="Follow">
						<% end %>
					<% end %>
			</div>
			
		<% end %>

	</div>

<% end %>