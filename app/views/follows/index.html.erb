<% @users.each do |user| %>
	<div class="col-md-4">
		<%= user.email %>
		<% unless user.id == @current_user_id %>
			<%= form_tag "/follows", method: :post do %>
				<input type="hidden" name="followee_id" value="<%=user.id%>">
				<input type="submit" value="Follow">
			<% end %>
		<% end %>
	</div>
<% end %>